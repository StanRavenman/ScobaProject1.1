<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5F5F5F"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_result"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:layout_weight="10"
        android:background="#7A7A7A"
        android:gravity="top"
        android:hint="DON'T TYPE HERE!\nResult of convertion..."
        android:padding="@dimen/padding"
        android:textColor="@color/yellow"
        android:textColorHint="@color/yellow_opacity"
        android:textIsSelectable="true"
        android:textSize="16sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/button_convert"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#3D3D3D"
        android:onClick="convert"
        android:text="CONVERT"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/horiz"
        android:layout_width="match_parent"
        android:layout_height="561dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margine"
            android:layout_weight="3"
            android:background="#7A7A7A"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/hint"
            android:inputType="textMultiLine"
            android:padding="@dimen/padding"
            android:textColor="#12D31A"
            android:textColorHint="@color/green_opacity"
            android:textSize="16sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_clear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:background="#3D3D3D"
                android:gravity="center"
                android:onClick="clear"
                android:text="C\nL\nE\nA\nR"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>